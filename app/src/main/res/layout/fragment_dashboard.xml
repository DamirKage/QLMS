<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <Button
        android:id="@+id/buttonTrafficAccident"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Сообщить о ДТП"
        android:textColor="@android:color/white"
        android:background="@color/color_primary"
        android:padding="16dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed"
        android:stateListAnimator="@animator/button_elevation" />

    <Button
        android:id="@+id/buttonDomesticViolence"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Сообщение о бытовом насилии"
        android:textColor="@android:color/white"
        android:background="@color/color_primary"
        android:padding="16dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonTrafficAccident"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:stateListAnimator="@animator/button_elevation" />

    <Button
        android:id="@+id/buttonIncidentReport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Сообщение о происшествии"
        android:textColor="@android:color/white"
        android:background="@color/color_primary"
        android:padding="16dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonDomesticViolence"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:stateListAnimator="@animator/button_elevation" />

    <Button
        android:id="@+id/buttonChildIncident"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Происшествие с ребенком"
        android:textColor="@android:color/white"
        android:background="@color/color_primary"
        android:padding="16dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonIncidentReport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:stateListAnimator="@animator/button_elevation" />

    <Button
        android:id="@+id/buttonTrafficViolation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Сообщение о нарушении ПДД"
        android:textColor="@android:color/white"
        android:background="@color/color_primary"
        android:padding="16dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonChildIncident"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:stateListAnimator="@animator/button_elevation" />

    <Button
        android:id="@+id/buttonAdministrativePolice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Административная полиция"
        android:textColor="@android:color/white"
        android:background="@color/color_primary"
        android:padding="16dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonTrafficViolation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:stateListAnimator="@animator/button_elevation" />

    <Button
        android:id="@+id/buttonComplainPolice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Пожаловаться на полицейского"
        android:textColor="@android:color/white"
        android:background="@color/color_primary"
        android:padding="16dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonAdministrativePolice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:stateListAnimator="@animator/button_elevation" />

    <Button
        android:id="@+id/buttonTerrorismExtremism"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Противодействие проявлениям терроризма и экстремизма"
        android:textColor="@android:color/white"
        android:background="@color/color_primary"
        android:padding="16dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonComplainPolice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:stateListAnimator="@animator/button_elevation" />

</androidx.constraintlayout.widget.ConstraintLayout>